{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime"  // This allows the new JSX transform
  ],
  "rules": {
    "@typescript-eslint/no-explicit-any": "warn",  // Make this a warning instead of error if needed
    "react/react-in-jsx-scope": "off"  // Disable if using React 17+ JSX transform
  }
}
