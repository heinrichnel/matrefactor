async function seedAdminDetails() {
  console.log(`ğŸ”„ Starting admin details seeding process...`);
  console.log(`ğŸ“Š Found ${authorisationMapping.length} admin details to seed`);
  
  try {
    const batch = db.batch();
    let successCount = 0;
    let skipCount = 0;
    
    for (const admin of authorisationMapping) {
      const docRef = db.collection('adminDetails').doc(admin.userId);
      
      // Check if document already exists to avoid duplicates
      const doc = await docRef.get();
      
      if (doc.exists) {
        console.log(`â„¹ï¸ Admin ${admin.userId} already exists, skipping...`);
        skipCount++;
        continue;
      }
      
      // Add admin data to batch
      batch.set(docRef, {
        ...admin,
        createdAt: new Date().toISOString(),
        updatedAt: new Date().toISOString()
      });
      
      successCount++;
    }
    
    // Commit the batch
    await batch.commit();
    
    console.log(`âœ… Successfully seeded ${successCount} admin details to Firestore`);
    console.log(`â„¹ï¸ Skipped ${skipCount} existing admin details`);
  } catch (error) {
    console.error('âŒ Error seeding admin details:', error);
  }
}

// Run the seeding function
seedAdminDetails().then(() => {
  console.log('ğŸ Admin details seeding process complete');
  process.exit(0);
}).catch(error => {
  console.error('âŒ Unhandled error during admin details seeding:', error);
  process.exit(1);
});
